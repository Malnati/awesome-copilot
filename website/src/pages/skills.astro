---
import BaseLayout from '../layouts/BaseLayout.astro';
import Modal from '../components/Modal.astro';
---


<BaseLayout title="Skills" description="Skills de agente auto-contidas com instructions e recursos" activeNav="skills">
  <main id="main-content">
    <div class="page-header">
      <div class="container">
        <h1>âš¡ Skills</h1>
        <p>Skills de agente auto-contidas com instructions e recursos</p>
      </div>
    </div>

    <div class="page-content">
      <div class="container">
        <div class="search-bar">
          <label for="search-input" class="sr-only">Buscar skills</label>
          <input type="text" id="search-input" placeholder="Buscar skills..." autocomplete="off">
        </div>

        <div class="filters-bar" id="filters-bar">
          <div class="filter-group">
            <label for="filter-category">Category:</label>
            <select id="filter-category" multiple aria-label="Filtrar por category"></select>
          </div>
          <div class="filter-group">
            <label class="checkbox-label">
              <input type="checkbox" id="filter-has-assets">
              Possui Bundled Assets
            </label>
          </div>
          <div class="filter-group">
            <label for="sort-select">Ordenar:</label>
            <select id="sort-select" aria-label="Ordenar por">
              <option value="title">Nome (A-Z)</option>
              <option value="lastUpdated">Mais recentes</option>
            </select>
          </div>
          <button id="clear-filters" class="btn btn-secondary btn-small">Limpar filtros</button>
        </div>

        <div class="results-count" id="results-count" aria-live="polite"></div>
        <div class="resource-list" id="resource-list" role="list">
          <div class="loading" aria-live="polite">Carregando skills...</div>
        </div>
      </div>
    </div>
  </main>

  <Modal />

  <script>
    import '../scripts/pages/skills';
  </script>
</BaseLayout>
