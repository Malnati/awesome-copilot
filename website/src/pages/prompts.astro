---
import BaseLayout from '../layouts/BaseLayout.astro';
import Modal from '../components/Modal.astro';
---


<BaseLayout title="Prompts" description="Modelos de prompt prontos para tarefas de desenvolvimento com o GitHub Copilot" activeNav="prompts">
  <main id="main-content">
    <div class="page-header">
      <div class="container">
        <h1>ðŸŽ¯ Prompts</h1>
        <p>Modelos de prompt prontos para tarefas de desenvolvimento com o GitHub Copilot</p>
      </div>
    </div>

    <div class="page-content">
      <div class="container">
        <div class="search-bar">
          <label for="search-input" class="sr-only">Buscar prompts</label>
          <input type="text" id="search-input" placeholder="Buscar prompts..." autocomplete="off">
        </div>

        <div class="filters-bar" id="filters-bar">
          <div class="filter-group">
            <label for="filter-tool">Ferramenta:</label>
            <select id="filter-tool" multiple aria-label="Filtrar por ferramenta"></select>
          </div>
          <div class="filter-group">
            <label for="sort-select">Ordenar:</label>
            <select id="sort-select" aria-label="Ordenar por">
              <option value="title">Nome (A-Z)</option>
              <option value="lastUpdated">Mais Recentes</option>
            </select>
          </div>
          <button id="clear-filters" class="btn btn-secondary btn-small">Limpar Filtros</button>
        </div>

        <div class="results-count" id="results-count" aria-live="polite"></div>
        <div class="resource-list" id="resource-list" role="list">
          <div class="loading" aria-live="polite">Carregando prompts...</div>
        </div>
      </div>
    </div>
  </main>

  <Modal />

  <script>
    import '../scripts/pages/prompts';
  </script>
</BaseLayout>
