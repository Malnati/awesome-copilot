---
import BaseLayout from '../layouts/BaseLayout.astro';
import Modal from '../components/Modal.astro';
---


<BaseLayout title="Agentes" description="Agentes especializados que aprimoram o GitHub Copilot para tecnologias, fluxos de trabalho e dom√≠nios espec√≠ficos" activeNav="agents">
  <main id="main-content">
    <div class="page-header">
      <div class="container">
        <h1>ü§ñ Agentes Personalizados</h1>
        <p>Agentes especializados que aprimoram o GitHub Copilot para tecnologias, fluxos de trabalho e dom√≠nios espec√≠ficos</p>
      </div>
    </div>

    <div class="page-content">
      <div class="container">
        <div class="search-bar">
          <label for="search-input" class="sr-only">Buscar agentes</label>
          <input type="text" id="search-input" placeholder="Buscar agentes..." autocomplete="off">
        </div>

        <!-- Filtros -->
        <div class="filters-bar" id="filters-bar">
          <div class="filter-group">
            <label for="filter-model">Modelo:</label>
            <select id="filter-model" multiple aria-label="Filtrar por modelo"></select>
          </div>
          <div class="filter-group">
            <label for="filter-tool">Ferramenta:</label>
            <select id="filter-tool" multiple aria-label="Filtrar por ferramenta"></select>
          </div>
          <div class="filter-group">
            <label class="checkbox-label">
              <input type="checkbox" id="filter-handoffs">
              Possui Handoffs
            </label>
          </div>
          <div class="filter-group">
            <label for="sort-select">Ordenar:</label>
            <select id="sort-select" aria-label="Ordenar por">
              <option value="title">Nome (A-Z)</option>
              <option value="lastUpdated">Mais Recentes</option>
            </select>
          </div>
          <button id="clear-filters" class="btn btn-secondary btn-small">Limpar Filtros</button>
        </div>

        <div class="results-count" id="results-count" aria-live="polite"></div>
        <div class="resource-list" id="resource-list" role="list">
          <div class="loading" aria-live="polite">Carregando agentes...</div>
        </div>
      </div>
    </div>
  </main>

  <Modal />

  <script>
    import '../scripts/pages/agents';
  </script>
</BaseLayout>
